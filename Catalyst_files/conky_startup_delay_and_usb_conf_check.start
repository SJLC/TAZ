#!/bin/bash

if [ -f "*/conky_files/.conkyrc1" ]
   [ -f "*/conky_files/.conkyrc2" ]
   [ -f "*/conky_files/.conkyrc3" ];
then
  conky -c */conky_files/.conkyrc1 -p 90
  conky -c */conky_files/.conkyrc2 -p 90
  conky -c */conky_files/.conkyrc3 -p 90
else
  conky -c /etc/conky.conf -p 90
fi
